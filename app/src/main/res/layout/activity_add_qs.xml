<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Add_QS">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:theme="@style/nav_theme"
        app:headerLayout="@layout/activity_nav_header_layout"
        app:menu="@menu/list_menu">

    </com.google.android.material.navigation.NavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cat_bg"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#11228B">

                    <Button
                        android:id="@+id/action_menu_presenter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_back"
                        android:gravity="start" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/righteous"
                        android:gravity="center"
                        android:text="Add Question"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </androidx.appcompat.widget.Toolbar>





                <TextView
                    android:id="@+id/imgtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/selected_question_option"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Hình ảnh "
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/image_qs"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@color/white"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Đặt câu hỏi"
                android:textColor="@color/white"
                android:textSize="20sp" />
<!--            <EditText-->
<!--                android:id="@+id/textview"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_width="match_parent"-->
<!--                android:inputType="text"/>-->
            <EditText
                android:id="@+id/qs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:background="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:paddingTop="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:inputType="text"
                android:hint="Nội dung câu hỏi ?"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Các đáp án"
                android:textColor="@color/white"
                android:textSize="20sp" />
                <EditText
                    android:id="@+id/da1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/question_option"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Đáp án 1"
                    android:textColor="@color/dark_blue"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/da2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/question_option"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Đáp án 2"
                    android:textColor="@color/dark_blue"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/da3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/question_option"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Đáp án 3"
                    android:textColor="@color/dark_blue"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/da4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/question_option"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Đáp án 4"
                    android:textColor="@color/dark_blue"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/righteous"
                    android:gravity="center"
                    android:text="Đáp án đúng"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/righteous"
                android:gravity="center"
                android:text="Lĩnh vực"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/bg_dialog_wrong"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="30dp"
                android:hint="Submit "
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>